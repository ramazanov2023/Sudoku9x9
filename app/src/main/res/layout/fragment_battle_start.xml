<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/battle_start_01"
            android:visibility="invisible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/battle_number_of_players"
                        style="@style/TextCategoryBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,208k"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        style="@style/TextCategoryLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Players Online"
                        app:layout_constraintStart_toEndOf="@id/battle_number_of_players"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/battle_card_search_player"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/back_round"
                            android:backgroundTint="@color/white_3">

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Date"
                                android:textColor="@color/gray_4" />

                            <TextView
                                style="@style/TextCategoryBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Search \nPlayer"
                                android:textColor="@color/gray_3"
                                tools:text="Search \nPlayer" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/battle_card_random_player"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/back_round"
                            android:backgroundTint="@color/gray_3">

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Date" />

                            <TextView
                                style="@style/TextCategoryBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="32dp"
                                android:gravity="center"
                                android:text="Random \nPlayer"
                                tools:text="Random \nPlayer" />

                            <Button
                                android:id="@+id/battle_play_random_player"
                                android:layout_width="76dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="32dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:paddingLeft="8dp"
                                android:paddingTop="0dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="play"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                app:cornerRadius="20dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/battle_card_four_random_player"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/back_round"
                            android:backgroundTint="@color/gray_3">

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Date" />

                            <TextView
                                style="@style/TextCategoryBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="32dp"
                                android:gravity="center"
                                android:text="4 Random \nPlayers"
                                tools:text="4 Random \nPlayers" />

                            <Button
                                android:id="@+id/battle_play_four_random_player"
                                android:layout_width="76dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="32dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:paddingLeft="8dp"
                                android:paddingTop="0dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="play"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                app:cornerRadius="20dp" />

                        </FrameLayout>
                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    style="@style/TextCategoryBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:text="Saved Players"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/battle_saved_of_players"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="94dp"
                            android:layout_marginEnd="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_11"
                                    tools:src="@drawable/fot_11" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="BlueMars" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="94dp"
                            android:layout_marginEnd="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_16"
                                    tools:src="@drawable/fot_16" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="DarkDesert" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="94dp"
                            android:layout_marginEnd="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_12"
                                    tools:src="@drawable/fot_12" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="nick_69" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="94dp"
                            android:layout_marginEnd="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_19"
                                    tools:src="@drawable/fot_19" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="ROCK_8" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="74dp"
                            android:layout_marginEnd="12dp"
                            android:layout_height="94dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_2"
                                    tools:src="@drawable/fot_2" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="BlueMars" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="74dp"
                            android:layout_height="94dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="74dp"
                                android:layout_height="74dp"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fot_8"
                                    tools:src="@drawable/fot_8" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/TextSmallLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="BlueMars" />
                        </FrameLayout>


                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>